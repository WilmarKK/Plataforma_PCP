{
  "name": "plataforma-pcp-frontend",
  "version": "1.0.0",
  "description": "Plataforma modular para gestão industrial inteligente",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite --port 5173 --open",
    "build": "npm run type-check && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "preview": "vite preview --port 4173",
    "serve": "npm run build && npm run preview",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md,json}\" \"*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md,json}\" \"*.{js,ts,json,md}\"",
    "clean": "rimraf dist node_modules/.vite",
    "clean:all": "rimraf dist node_modules",
    "reinstall": "npm run clean:all && npm install",
    "test": "echo \"Testes não configurados ainda\" && exit 0",
    "test:coverage": "echo \"Coverage não configurado ainda\" && exit 0",
    "prepare": "husky install",
    "postinstall": "npm run prepare"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.263.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.32",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.8.3",
    "vite": "^5.3.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "react",
    "typescript",
    "vite",
    "industrial",
    "manufacturing",
    "pcp",
    "production-control",
    "dashboard",
    "frontend",
    "enterprise"
  ],
  "author": {
    "name": "PlataformaPCP Team",
    "email": "dev@plataformapcp.com",
    "url": "https://plataformapcp.com"
  },
  "contributors": [
    {
      "name": "Seu Nome",
      "email": "seu.email@exemplo.com",
      "role": "Lead Developer"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seu-usuario/plataforma-pcp-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/plataforma-pcp-frontend/issues"
  },
  "homepage": "https://github.com/seu-usuario/plataforma-pcp-frontend#readme",
  "license": "MIT"
}
